<resources>

    <!-- Base application theme. -->
    <style name="CustomAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- couleurs qui interviennent pour le theme de l'appli -->
        <item name="colorPrimaryDark">@color/cardview_dark_background</item>
        <item name="android:textColor">@color/cardview_light_background</item>
        <item name="android:background">@color/cardview_dark_background</item>
    </style>

    <style name="SpinnerBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="CustomDropDownSpinner" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:paddingTop">7dp</item>
    </style>

    <style name="nameIconText" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="detailListText" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>
